<div class="col-md-12">
  <div class="group">
    <%= link_to("New group", new_groups_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Tittle</td>
        <td>Description</td>
      </tr>
    </thead>
    <tbody>
       <% @groups.each do |group| %>
         <tr>
           <td>#</td>
            <td><%= link_to(group.title, groups_path(group)) %></td>
            <td><%= group.description %></td>
            <td>
                    <%= link_to("Edit", edit_groups_path(group), class: "btn btn-sm btn-default")%>
                    <%= link_to("Delete", groups_path(group),    class: "btn btn-sm btn-default", method: :delete, data: { confirm: "Are you sure?" } )%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
